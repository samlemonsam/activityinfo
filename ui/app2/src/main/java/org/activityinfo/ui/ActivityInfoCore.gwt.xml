<module rename-to="ActivityInfo">

  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Inherit additional dependencies  -->
  <inherits name='com.google.gwt.inject.Inject'/>
  <inherits name="com.google.gwt.i18n.I18N"/>

  <inherits name="com.google.gson.Gson"/>
  <inherits name='com.extjs.gxt.ui.GXT'/>

  <!-- Force LTR for Arabic version -->
  <inherits name="org.activityinfo.i18n.ArabicLTR"/>
  
  <inherits name="org.discotools.gwt.leaflet.Core"/>

  <inherits name="com.google.gwt.inject.Inject"/>
  <inherits name="com.extjs.gxt.charts.Chart"/>
  <inherits name='com.allen_sauer.gwt.dnd.gwt-dnd'/>
  <inherits name='com.arcbees.chosen.Chosen'/>

  <inherits name="com.google.common.collect.Collect"/>

  <inherits name="com.bedatadriven.rebar.sql.Sql"/>
  <inherits name="com.bedatadriven.rebar.Time"/>
  <inherits name="com.bedatadriven.rebar.style.Style"/>

  <inherits name="org.activityinfo.i18n.I18n"/>
  <inherits name="org.activityinfo.model.Model"/>
  <inherits name="org.activityinfo.legacy.GwtRpc"/>
  <inherits name="org.activityinfo.api.ApiClient"/>
  
  <inherits name="org.activityinfo.ui.Icons"/>

  <inherits name="org.activityinfo.io.Match"/>
  
  <set-property name="user.agent" value="ie8,ie9,ie10,safari,gecko1_8"/>

  <set-configuration-property name="CssResource.conversionMode" value="strict" />

  <!-- Resolve Guice-Gin problem:
       https://groups.google.com/forum/#!topic/google-gin/ywh7d9s6GpA  -->

  <set-configuration-property name="gin.classloading.exceptedPackages" value="com.google.gwt.core.client"/>


  <!-- Include generated sources -->
  <source path='client'/>
  <source path="shared"/>

  <!-- Configure AppCache -->
  <inherits name="org.realityforge.gwt.appcache.Appcache"/>

  <!-- Enable the linker -->

  <inherits name="org.realityforge.gwt.appcache.linker.Linker"/>

  <!-- enable the linker that generates the manifest -->
  <add-linker name="appcache"/>

  <!-- configure all the static files not managed by the GWT compiler -->
  <extend-configuration-property name="appcache_static_files" value="/about/assets/css/style.css"/>
  <extend-configuration-property name="appcache_static_files" value="/about/assets/images/logo-activityinfo.png"/>
  <extend-configuration-property name="appcache_static_files" value="/about/assets/images/bdd-logo.svg"/>

  <!-- configure fallback rules used by the client when offline -->
  <extend-configuration-property name="appcache_fallback_files" value="/login /app/offline"/>
  <extend-configuration-property name="appcache_fallback_files" value=". /app/offline"/>

</module>
