          "typeParameters": {
            "units": "individuals"
          }
        }
      ]
    },
    { "id": "means_section",
      "label": "Means",
      "type": "section",
      "elements": [
        {
          "id": "means",
          "label": "Means",
          "required": true,
          "type": "reference",
          "typeParameters": {
            "cardinality": "single",
            "range": [
              {
                "formId": "means"
              }
            ]
          }
        }
      ]
